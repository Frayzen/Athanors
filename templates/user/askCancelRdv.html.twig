{% extends 'base.html.twig' %}

{% block body %}

    <h3>Demande d'annulation de rendez vous pour le {{ rdv.start|date("Y-m-d H:i") }}</h3>

    {{ form_start(form) }}
    Raison de la demande:
    {{ form_widget(form.reason) }}
    {{ form_errors(form.reason) }}
    <small class="text-danger m-auto">L'envoie de la demande est irréversible et, une fois accepté par le professionel,
        sera appliquée immédiatement</small>
    <br><input type="submit" value="Envoyer la demande d'annulation" class="mt-3 btn btn-danger">
    {{ form_end(form) }}

{% endblock %}

{% block title %}
    Demande d'annultaion
{% endblock %}

