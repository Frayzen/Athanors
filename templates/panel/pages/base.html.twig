    <div class="container-fluid mx-0 my-2">
        <div class="row">
            <div class="col col-md-2">
                <div class="list-group" id="list-tab" role="tablist">
                    <a href="{{ path("panel_pro") }}" class="list-group-item list-group-item-action">Ma page de professionel</a>
                    <a href="{{ path('panel_pro_rdv') }}" class="list-group-item list-group-item-action">Validation de rendez vous {% if newRdvNotViewed > 0 %}<span class="badge badge-primary">{{ newRdvNotViewed }}</span>{% endif %}</a>
